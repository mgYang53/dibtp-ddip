{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "NEXT_RUNTIME",
        "SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_DSN",
        "VAPID_PRIVATE_KEY",
        "VAPID_SUBJECT",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "NEXT_RUNTIME",
        "SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_DSN",
        "VAPID_PRIVATE_KEY",
        "VAPID_SUBJECT",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY"
      ]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
